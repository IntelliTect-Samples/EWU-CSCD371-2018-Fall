<Window x:Class="Assignment8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button x:Name="StartStop" Grid.RowSpan="1" Grid.Column="0" FontSize="30">Start/Stop</Button>
        
        <Button x:Name="Delete" Grid.Row="2" Grid.Column="0" FontSize="30">Delete</Button>

        <Label x:Name="Clock" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" />
        <Label x:Name="TaskRunningMessage" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Blue" />

        <ListBox x:Name="ListBox" Grid.RowSpan="2"  Grid.Column="1" Background="Aqua" SelectionMode="Single">
            
        </ListBox>
    </Grid>
</Window>
