<Window x:Class="Assignment8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MyGrid" Margin="40, 10">
        <StackPanel x:Name="StackPanel" Background="Blue">
            <TextBlock x:Name="GuiClock" Background="Blue"  FontSize="25" Foreground="Cyan"></TextBlock>
            <Button Content="StartTimer" VerticalAlignment="Center" 
                HorizontalAlignment="Center" x:Name="ClickMeButton"
                Click="TimerButton_OnClick" Margin="0"/>
            <ListBox x:Name="ListOfItems" Background="Cyan">
            </ListBox>
        </StackPanel>

    </Grid>
</Window>
 